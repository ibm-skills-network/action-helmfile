{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "required": [
    "license",
    "replicaCount",
    "maxUnavailableNodeCount",
    "image",
    "iamEndpoint",
    "iamEndpointVPC",
    "cos",
    "provider",
    "platform",
    "arch",
    "dcname",
    "region",
    "workerOS",
    "resource",
    "kubeDriver",
    "bucketAccessPolicy",
    "s3fsVersion",
    "quotaLimit",
    "allowCrossNsSecret",
    "secondaryValueFile"
  ],
  "properties": {
    "license": {
      "$id": "#/properties/license",
      "type": "boolean",
      "title": "License",
      "description": "Whether to accept apache license.",
      "default": false
    },
    "replicaCount": {
      "$id": "#/properties/replicaCount",
      "type": "integer",
      "title": "Replica Count",
      "description": "Value for Replica Count",
      "default": 1
    },
    "maxUnavailableNodeCount": {
      "$id": "#/properties/maxUnavailableNodeCount",
      "type": "integer",
      "title": "Max Unavailable Node Count",
      "description": "Value for Max Unavailable Node Count",
      "default": 1
    },
    "iamEndpoint": {
      "$id": "#/properties/iamEndpoint",
      "type": "string",
      "title": "iam Endpoint",
      "default": "https://iam.cloud.ibm.com"
    },
    "iamEndpointVPC":{
	    "$id": "#/properties/iamEndpointVPC",
	    "type": "string",
	    "title": "iam VPC Private Endpoint",
	    "default": "https://private.iam.cloud.ibm.com"
    },
    "provider": {
      "$id": "#/properties/provider",
      "type": "string",
      "title": "Service Provider",
      "description": "service provider type",
      "default": "rhocp"
    },
    "platform": {
      "$id": "#/properties/platform",
      "type": "string",
      "title": "Container Platform",
      "description": "container platform type",
      "default": "OpenShift"
    },
    "arch": {
      "$id": "#/properties/arch",
      "type": "string",
      "title": "Architecture",
      "description": "pod architecture",
      "default": "OpenShift"
    },
    "dcname": {
      "$id": "#/properties/dcname",
      "type": "string",
      "title": "DataCenter",
      "description": "Data Center of workers",
      "default": ""
    },
    "region": {
      "$id": "#/properties/region",
      "type": "string",
      "title": "Region",
      "description": "Region of cluster",
      "default": ""
    },
    "workerOS": {
      "$id": "#/properties/workerOS",
      "type": "string",
      "title": "Worker OS",
      "description": "Worker OS",
      "default": "redhat"
    },
    "kubeDriver": {
      "$id": "#/properties/kubeDriver",
      "type": "string",
      "title": "kube Driver",
      "description": "kube Driver path",
      "default": "/etc/kubernetes"
    },
    "secondaryValueFile": {
      "$id": "#/properties/secondaryValueFile",
      "type": "string",
      "title": "secondaryValueFile",
      "description": "secondary Value File",
      "default": "ibm/values.yaml"
    },
    "bucketAccessPolicy": {
      "$id": "#/properties/bucketAccessPolicy",
      "type": "boolean",
      "title": "Access Policy",
      "description": "enable bucket access policy",
      "default": false
    },
    "s3fsVersion":{
      "$id": "#/properties/s3fsVersion",
      "type": "string",
      "title": "S3fs build that needs to be installed",
      "description": "current and previous version of s3fs-fuse supported",
      "default": "current"
    },
    "quotaLimit": {
      "$id": "#/properties/quotaLimit",
      "type": "boolean",
      "title": "Quota Limit",
      "description": "enable bucket quota limit",
      "default": false
    },
    "allowCrossNsSecret": {
      "$id": "#/properties/allowCrossNsSecret",
      "type": "boolean",
      "title": "Allow Cross Namespace Secret",
      "description": "enable/disable reading secret from cross namesapce",
      "default": true
    },
    "cos": {
      "$id": "#/properties/cos",
      "type": "object",
      "title": "cos parameters",
      "default": {},
      "required": [
        "endpoint",
        "storageClass",
        "s3Provider"
      ],
      "properties": {
        "endpoint": {
          "$id": "#/properties/cos/properties/endpoint",
          "type": "string",
          "title": "cos endpoint",
          "default": "https://<Endpoint URL>"
        },
        "storageClass": {
          "$id": "#/properties/cos/properties/storageClass",
          "type": "string",
          "title": "Storage Class",
          "default": "<StorageClass>"
        },
        "s3Provider": {
          "$id": "#/properties/cos/properties/s3Provider",
          "type": "string",
          "title": "S3 Provider",
          "default": ""
        }
      }
    },
    "resource": {
      "$id": "#/properties/resource",
      "type": "object",
      "title": "Resources",
      "default": {},
      "required": [
        "memory",
        "cpu",
	"ephemeralStorageReq",
	"ephemeralStorageLimit"
      ],
      "properties": {
        "memory": {
          "$id": "#/properties/resource/properties/memory",
          "type": "string",
          "title": "Memory",
          "default": "500Mi"
        },
        "cpu": {
          "$id": "#/properties/resource/properties/cpu",
          "type": "string",
          "title": "CPU",
          "default": "500m"
        },
	"ephemeralStorageReq": {
        "$id": "#/properties/resource/properties/ephemeralStorageReq",
        "type": "string",
        "title": "Ephemeral-Storage-Request",
        "default": "5Mi"
        },
	"ephemeralStorageLimit": {
        "$id": "#/properties/resource/properties/ephemeralStorageLimit",
        "type": "string",
        "title": "Ephemeral-Storage-Limit",
        "default": "105Mi"
        }
      }
    },
    "image": {
      "$id": "#/properties/image",
      "type": "object",
      "title": "COS Images",
      "default": {},
      "required": [
        "pluginImage",
        "driverImage",
        "providerImage",
        "pullPolicy"
      ],
      "properties": {
        "pluginImage": {
          "$id": "#/properties/image/properties/pluginImage",
          "type": "object",
          "title": "Plugin Images",
          "default": {},
          "required": [
            "ibmContainerRegistry",
            "publicRegistry"
          ],
          "properties": {
            "ibmContainerRegistry": {
              "$id": "#/properties/image/properties/pluginImage/properties/ibmContainerRegistry",
              "type": "string",
              "title": "ibmContainerRegistry",
              "default": "icr.io/ibm/ibmcloud-object-storage-plugin@sha256:6a4a874ff48a8aaa02f4ebda2cccf39d85def4a87821e59fbb8b145206cb5235"
            },
            "publicRegistry": {
              "$id": "#/properties/image/properties/pluginImage/properties/publicRegistry",
              "type": "string",
              "title": "publicRegistry",
              "default": "icr.io/cpopen/ibmcloud-object-storage-plugin@sha256:6a4a874ff48a8aaa02f4ebda2cccf39d85def4a87821e59fbb8b145206cb5235"
            }
          }
        },
        "driverImage": {
          "$id": "#/properties/image/properties/driverImage",
          "type": "object",
          "title": "Driver Images",
          "default": {},
          "required": [
            "ibmContainerRegistry",
            "publicRegistry"
          ],
          "properties": {
            "ibmContainerRegistry": {
              "$id": "#/properties/image/properties/driverImage/properties/ibmContainerRegistry",
              "type": "string",
              "title": "ibmContainerRegistry",
              "default": "icr.io/ibm/ibmcloud-object-storage-driver@sha256:c3bbfb5f3805ed0aada57eb684af9d9e4a22c6c072b24ce80249f035d5f0f284"
            },
            "publicRegistry": {
              "$id": "#/properties/image/properties/driverImage/properties/publicRegistry",
              "type": "string",
              "title": "publicRegistry",
              "default": "icr.io/cpopen/ibmcloud-object-storage-driver@sha256:c3bbfb5f3805ed0aada57eb684af9d9e4a22c6c072b24ce80249f035d5f0f284"
            }
          }
        },
        "providerImage": {
          "$id": "#/properties/image/properties/providerImage",
          "type": "object",
          "title": "Provider Images",
          "default": {},
          "required": [
            "ibmContainerRegistry"
          ],
          "properties": {
            "ibmContainerRegistry": {
              "$id": "#/properties/image/properties/providerImage/properties/ibmContainerRegistry",
              "type": "string",
              "title": "ibmContainerRegistry",
              "default": "icr.io/ibm/ibmcloud-provider-storage:1.30.31"
            }
          }
        },
        "pullPolicy": {
          "$id": "#/properties/image/properties/pullPolicy",
          "type": "string",
          "title": "Image Pull Policy",
          "default": "IfNotPresent"
        }
      }
    }
  },
  "additionalProperties": true
}
